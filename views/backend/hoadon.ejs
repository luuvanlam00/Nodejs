<%- include('layout/header.ejs')%>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h1>Quản lý hóa đơn </h1>     
            </div>
            <div class="ibox-content">
                <% if(success_msg != ''){ %> 
                    <div class="alert alert-success"><%= success_msg%></div>
               <% } %>
                <table class="display" id="myTable">
                    <thead>
                    <tr>
                        <th>STT</th>
                        <th>Ngày bán </th>
                        <th>Tên khách hàng</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>Trạng thái</th>
                        <th >Công cụ</th>
                        
                        
                    </tr>
                    </thead>
                    <tbody>
                        <% var i = 0 ;hoadon.forEach(function(hoadon){ i++; %>
                    <tr>
                      
                        <td><%= i %></td>
                        <td><%= hoadon.thoigian.getDate()+'-'+(hoadon.thoigian.getMonth()+1)+'-'+hoadon.thoigian.getFullYear(); %></td>
                        <td><%=hoadon.tenkh %></td>
                        <td><%=hoadon.sdt %></td>
                        <td><%=hoadon.email %></td>
                        <td><%=hoadon.diachi %></td>
                        <td><%=hoadon.trangthai %></td>
                        <td><a   href="/quantri/hoadon/getupdate/<%=hoadon.id_hd %>"><button type="button" class="btn btn-primary btn-sm">Sửa</button></a>
                            <a onclick="return xoa();" href="/quantri/hoadon/delete/<%=hoadon.id_hd %>"><button type="button" class="btn btn-primary btn-sm">Xóa</button></a>
                            <a href="/quantri/hoadon/chitiet/<%=hoadon.id_hd %>"><button type="button" class="btn btn-primary btn-sm">Chi tiết</button></a></td>
                        
                      
                    </tr>
                    <% }) %>
                    </tbody>
                </table>

            </div>

        </div>
    </div>

</div>
<link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables.css">
  <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js"></script>
  <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/jquery.dataTables.min.js"></script>
  <script>
       $(document).ready(function(){
        $('#myTable').DataTable();
    });
  </script>
<%- include('layout/footer.ejs')%>
