<%- include('layout/header.ejs')%>
<div class="ibox-content">
    <h1>Sửa hóa đơn </h1>
    <form method="post" class="form-horizontal"  action="/quantri/hoadon/update">
      
            <input type="hidden" name="id_hd" value="<%= hoadon.id_hd%>">
            <div class="form-group"><label class="col-sm-2 control-label">Tên khách hàng </label>

                <div class="col-sm-10"><input type="text" required="" class="form-control" name="tenkh" value="<%= hoadon.tenkh%>"  /></div>
            </div>
            <div class="form-group"><label class="col-sm-2 control-label">Số điện thoại </label>

                <div class="col-sm-10"><input type="text" required="" class="form-control" name="sdt" value="<%= hoadon.sdt%>"  /></div>
            </div>
            <div class="form-group"><label class="col-sm-2 control-label">Email </label>

                <div class="col-sm-10"><input type="text" required="" class="form-control" name="email" value="<%= hoadon.email%>"  /></div>
            </div>

            <div class="form-group"><label class="col-sm-2 control-label">Địa chỉ</label>

                <div class="col-sm-10"><textarea require="" class="form-control" name="diachi"><%= hoadon.diachi%></textarea></div>
            </div>

            <div class="form-group"><label class="col-sm-2 control-label">Trạng thái </label>

                <div class="col-sm-10">
                    <%if(hoadon.trangthai == 'Chưa xác nhận' ) {%>
                <select class="form-control m-b" name="trangthai">       
                        <option selected>Chưa xác nhận</option>
                        <option >Xác nhận</option>

              
                      
             
                

                </select>
               <%}else{%>
                <select class="form-control m-b" name="trangthai">
                
                        <option >Chưa xác nhận</option>
                        <option selected>Xác nhận</option>

                </select>
                <%}%>
                
                </div>
            </div>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
                <button class="btn btn-primary" type="submit" name="sua">Sửa</button>

            </div>
        </div>
    </form>
</div>
<%- include('layout/footer.ejs')%>
