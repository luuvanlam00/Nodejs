<%- include('layout/header.ejs')%>
<div class="ibox-content">
    <h1>Sửa khách hàng</h1>
    <form method="post" class="form-horizontal" action="/quantri/khachhang/update">
        <input type="hidden" required="" class="form-control" name="id_kh"  value="<%=khachhang.id_kh%>"/>
        <div class="form-group"><label class="col-sm-2 control-label">Tên khách hàng</label>

            <div class="col-sm-8"><input type="text" required="" class="form-control" name="tenkh" value="<%=khachhang.tenkh%>"/></div>
        </div>
        <div class="form-group"><label class="col-sm-2 control-label">Email</label>

            <div class="col-sm-8"><input type="email" required="" class="form-control" name="email" value="<%=khachhang.email%>"/></div>
        </div>
        <div class="form-group"><label class="col-sm-2 control-label">Số điện thoại</label>

            <div class="col-sm-8"><input type="text" required="" class="form-control" name="sdt" value="<%=khachhang.sdt%>"/></div>
        </div>
        <div class="hr-line-dashed"></div>


        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
                <button class="btn btn-primary" type="submit" name="sua">Sửa</button>
               
            </div>
        </div>
    </form>
</div>
<%- include('layout/footer.ejs')%>